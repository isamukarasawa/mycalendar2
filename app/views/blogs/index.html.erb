<p id="notice"><%= notice %></p>

<div class="toppage">
    <h1 class="top">カレンダー</h1>

  <div class="seid">
    <div class="row">
    <div class="col-md-4">
      <div class="schedule">予定一覧</div>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>ToDo</th>
          <th>削除</th>
        </tr>
      </thead>

      <tbody>
        <% @blogs.each do |blog| %>
          <tr>
            <td><%= link_to blog.title, blog %></td>
            <td><%= link_to '◉', blog, method: :delete %></td>
            <td><% blog.start_time %></td>
          </tr>
        <% end %>
      </tbody>
    </table>



    <%= form_with(model: @blog, local: true) do |form| %>

      <div class="title">
        <div class="form-tag">todo</div>
        <div calss="title-form">
          <%= form.text_field :title %>
        </div>
      </div>


      <div class="content">
        <div class="form-tag">memo</div>
        <%= form.text_field :content %>
      </div>

        <div class="time">
        <div class="form-tag">day</div>
        <%#= form.datetime_select :start_time %>
        <%= form.date_field :start_time %>
      </div>

    <div class="submit">
        <%= form.submit %>
    </div>
    <% end %>
    </div>
  </div>
<br>


<br>
<div class="col-md-8">
<%= month_calendar events: @blogs do |date, blogs| %>
  <div class="day">
   <%= date.day %>
  </div>

  <% blogs.each do |blog| %>
    <div class="plan">
      <%= link_to blog.title, blog %>
    </div>
  <% end %>
<% end %>
</div>
</div>
</div>